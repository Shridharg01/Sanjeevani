---
// Blog Card Component - Reusable component for displaying blog posts
// This component automatically displays blog posts from the data file
// You don't need to edit this file - just update src/data/blog.js
export interface Props {
  post: {
    id: number;
    title: string;
    slug: string;
    category: string;
    excerpt: string;
    image: string;
    author: string;
    date: string;
    readTime: string;
    tags: string[];
    featured?: boolean;
    seoKeywords?: string;
  };
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
---

<article class={`blog-card ${featured ? 'featured' : ''}`} data-category={post.category}>
  <div class="blog-image">
    <img src={post.image} alt={post.title} loading="lazy" />
    <div class="category-badge">{post.category.replace('-', ' ')}</div>
    {post.featured && (
      <div class="featured-badge">
        <span>⭐ Featured</span>
      </div>
    )}
  </div>
  
  <div class="blog-content">
    <div class="blog-meta">
      <span class="author">{post.author}</span>
      <span class="date">{post.date}</span>
      <span class="read-time">{post.readTime}</span>
    </div>
    
    <h3 class="blog-title">
      <a href={`/blog/${post.slug}`} aria-label={`Read full article: ${post.title}`}>{post.title}</a>
    </h3>
    
    <p class="blog-excerpt">{post.excerpt}</p>
    
    <div class="blog-tags">
      {post.tags.slice(0, 3).map(tag => (
        <span class="tag">#{tag}</span>
      ))}
    </div>
    
    <div class="blog-footer">
      <a href={`/blog/${post.slug}`} class="read-more">
        Read Full Article
        <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <title>Read more arrow</title>
          <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
        </svg>
      </a>
      
      <div class="share-buttons">
        <button class="share-btn" data-share="whatsapp" aria-label="Share this article on WhatsApp">
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <title>WhatsApp icon</title>
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.63"/>
          </svg>
        </button>
        <button class="share-btn" data-share="facebook" aria-label="Share this article on Facebook">
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <title>Facebook icon</title>
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</article>

<style>
  .blog-card {
    background: white;
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
    height: fit-content;
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl);
    border-color: var(--primary-200);
  }

  .blog-card.featured {
    border-color: var(--primary-300);
    background: linear-gradient(135deg, white 0%, var(--primary-50) 100%);
  }

  .blog-image {
    position: relative;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .blog-card:hover .blog-image img {
    transform: scale(1.05);
  }

  .category-badge {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-2xl);
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: capitalize;
    backdrop-filter: blur(10px);
  }

  .featured-badge {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    background: linear-gradient(135deg, var(--accent-500), var(--accent-600));
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-2xl);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .blog-content {
    padding: var(--space-8);
  }

  .blog-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    font-size: 0.85rem;
    color: var(--neutral-600);
  }

  .blog-meta span {
    position: relative;
  }

  .blog-meta span:not(:last-child)::after {
    content: '•';
    position: absolute;
    right: calc(-1 * var(--space-3) / 2);
    color: var(--neutral-400);
  }

  .author {
    font-weight: 500;
    color: var(--primary-600);
  }

  .blog-title {
    margin-bottom: var(--space-4);
  }

  .blog-title a {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--neutral-900);
    line-height: 1.4;
    transition: color var(--transition-normal);
    font-family: var(--font-display);
  }

  .blog-title a:hover {
    color: var(--primary-600);
  }

  .blog-excerpt {
    color: var(--neutral-600);
    line-height: 1.6;
    margin-bottom: var(--space-6);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-tags {
    display: flex;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--neutral-100);
    color: var(--neutral-700);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 500;
    transition: all var(--transition-normal);
  }

  .tag:hover {
    background: var(--primary-100);
    color: var(--primary-700);
  }

  .blog-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-4);
    border-top: 1px solid var(--neutral-200);
  }

  .read-more {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--primary-600);
    font-weight: 500;
    font-size: 0.9rem;
    transition: all var(--transition-normal);
  }

  .read-more:hover {
    color: var(--primary-700);
    transform: translateX(4px);
  }

  .share-buttons {
    display: flex;
    gap: var(--space-2);
  }

  .share-btn {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--neutral-100);
    color: var(--neutral-600);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-normal);
    cursor: pointer;
  }

  .share-btn:hover {
    background: var(--primary-100);
    color: var(--primary-600);
    transform: translateY(-2px);
  }

  .share-btn[data-share="whatsapp"]:hover {
    background: #25D366;
    color: white;
  }

  .share-btn[data-share="facebook"]:hover {
    background: #1877F2;
    color: white;
  }

  @media (max-width: 768px) {
    .blog-content {
      padding: var(--space-6);
    }
    
    .blog-meta {
      flex-wrap: wrap;
      gap: var(--space-2);
    }
    
    .blog-title a {
      font-size: 1.125rem;
    }
    
    .blog-footer {
      flex-direction: column;
      gap: var(--space-4);
      align-items: flex-start;
    }
    
    .share-buttons {
      align-self: flex-end;
    }
  }

  @media (max-width: 480px) {
    .blog-content {
      padding: var(--space-5);
    }
    
    .blog-image {
      aspect-ratio: 16/9;
    }
    
    .category-badge,
    .featured-badge {
      font-size: 0.7rem;
      padding: var(--space-1) var(--space-2);
    }
  }
</style>

<script>
  // Share functionality
  document.addEventListener('DOMContentLoaded', function() {
    const shareButtons = document.querySelectorAll('.share-btn');
    
    shareButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        const shareType = this.getAttribute('data-share');
        const blogCard = this.closest('.blog-card');
        const title = blogCard.querySelector('.blog-title a').textContent;
        const url = window.location.origin + '/blog';
        
        let shareUrl = '';
        
        switch(shareType) {
          case 'whatsapp':
            shareUrl = `https://wa.me/?text=${encodeURIComponent(`${title} - ${url}`)}`;
            break;
          case 'facebook':
            shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;
            break;
        }
        
        if (shareUrl) {
          window.open(shareUrl, '_blank', 'width=600,height=400');
        }
      });
    });
  });
</script>