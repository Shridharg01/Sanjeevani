<style>
  .why-choose-us {
    background: white;
    position: relative;
    overflow: hidden;
  }

  .why-choose-us::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: linear-gradient(135deg, var(--primary-50) 0%, var(--secondary-50) 100%);
    opacity: 0.5;
    z-index: 0;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .section-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-2xl);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: var(--space-6);
    box-shadow: var(--shadow-lg);
  }

  .badge-icon {
    font-size: 1rem;
  }

  .text-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--neutral-900);
    margin-bottom: var(--space-6);
    font-family: var(--font-display);
    line-height: 1.2;
  }

  .subtitle {
    font-size: 1.125rem;
    color: var(--neutral-600);
    margin-bottom: var(--space-10);
    line-height: 1.6;
  }

  .reasons-grid {
    display: grid;
    gap: var(--space-6);
    margin-bottom: var(--space-10);
  }

  .reason-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-5);
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
  }

  .reason-item:hover {
    transform: translateX(8px);
    box-shadow: var(--shadow-lg);
    background: rgba(255, 255, 255, 0.95);
  }

  .reason-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
    box-shadow: var(--shadow-md);
  }

  .reason-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: var(--space-2);
    font-family: var(--font-display);
  }

  .reason-content p {
    color: var(--neutral-600);
    line-height: 1.5;
    margin: 0;
  }

  .credentials {
    padding: var(--space-6);
    background: var(--neutral-50);
    border-radius: var(--radius-xl);
    border: 1px solid var(--neutral-200);
  }

  .credentials h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: var(--space-4);
    text-align: center;
  }

  .credentials-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
  }

  .credential-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--neutral-700);
  }

  .credential-icon {
    font-size: 1.125rem;
  }

  .visual-content {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .image-container {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-2xl);
  }

  .main-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .stats-overlay {
    position: absolute;
    bottom: var(--space-6);
    left: var(--space-6);
    right: var(--space-6);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: var(--radius-xl);
    padding: var(--space-5);
    display: flex;
    justify-content: space-around;
    box-shadow: var(--shadow-lg);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-600);
    font-family: var(--font-display);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--neutral-600);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .testimonial-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    box-shadow: var(--shadow-xl);
    border: 1px solid var(--neutral-200);
  }

  .testimonial-content {
    position: relative;
  }

  .quote-icon {
    font-size: 3rem;
    color: var(--primary-200);
    font-family: Georgia, serif;
    line-height: 1;
    margin-bottom: var(--space-3);
  }

  .testimonial-content p {
    font-size: 1rem;
    color: var(--neutral-700);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .author-name {
    font-weight: 600;
    color: var(--neutral-900);
    font-size: 0.95rem;
  }

  .author-location {
    font-size: 0.85rem;
    color: var(--neutral-600);
  }

  .rating {
    font-size: 0.875rem;
    color: #fbbf24;
  }

  @media (max-width: 1024px) {
    .content-wrapper {
      gap: var(--space-12);
    }
    
    .text-content h2 {
      font-size: 2.25rem;
    }
    
    .credentials-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .why-choose-us::before {
      display: none;
    }
    
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: var(--space-10);
    }
    
    .text-content h2 {
      font-size: 2rem;
      text-align: center;
    }
    
    .reasons-grid {
      gap: var(--space-4);
    }
    
    .reason-item {
      padding: var(--space-4);
      text-align: left;
    }
    
    .reason-item:hover {
      transform: translateY(-4px);
    }
    
    .stats-overlay {
      flex-direction: column;
      gap: var(--space-3);
      padding: var(--space-4);
    }
    
    .stat-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .stat-number {
      font-size: 1.25rem;
    }
    
    .credentials {
      margin: 0 var(--space-2);
    }
    
    .testimonial-card {
      margin: 0 var(--space-2);
    }
  }

  @media (max-width: 480px) {
    .text-content h2 {
      font-size: 1.75rem;
      line-height: 1.3;
    }
    
    .reason-item {
      flex-direction: column;
      text-align: center;
      gap: var(--space-3);
      padding: var(--space-3);
    }
    
    .credentials {
      padding: var(--space-4);
      margin: 0;
    }
    
    .testimonial-card {
      padding: var(--space-4);
      margin: 0;
    }
    
    .stats-overlay {
      left: var(--space-4);
      right: var(--space-4);
      bottom: var(--space-4);
      padding: var(--space-4);
    }
    
    .reason-content h4 {
      font-size: 1.125rem;
    }
    
    .reason-content p {
      font-size: 0.95rem;
      line-height: 1.6;
    }
    
    .credentials-grid {
      gap: var(--space-2);
    }
    
    .credential-item {
      font-size: 0.8rem;
    }
  }

  /* Extra Small Devices */
  @media (max-width: 320px) {
    .text-content h2 {
      font-size: 1.5rem;
    }
    
    .reason-item {
      padding: var(--space-2);
    }
    
    .reason-icon {
      width: 40px;
      height: 40px;
    }
    
    .credentials {
      padding: var(--space-3);
    }
    
    .testimonial-card {
      padding: var(--space-3);
    }
  }

  /* Touch Device Optimizations */
  @media (hover: none) and (pointer: coarse) {
    .reason-item {
      transition: none;
    }
    
    .reason-item:hover {
      transform: none;
    }
  }
</style>