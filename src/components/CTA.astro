<style>
  .cta {
    position: relative;
    overflow: hidden;
    color: white;
  }

  .cta-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
  }

  .cta-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--primary-600) 0%, var(--primary-700) 50%, var(--secondary-600) 100%);
  }

  .cta-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 60%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  }

  .cta-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  .cta-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-2xl);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: var(--space-6);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .badge-icon {
    font-size: 1rem;
  }

  .cta-text h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--space-6);
    font-family: var(--font-display);
    line-height: 1.2;
  }

  .cta-text p {
    font-size: 1.2rem;
    margin-bottom: var(--space-8);
    opacity: 0.9;
    line-height: 1.6;
    color: white;
  }

  .cta-features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-weight: 500;
    font-size: 1rem;
  }

  .feature-icon {
    color: var(--accent-300);
    font-size: 1.125rem;
    flex-shrink: 0;
  }

  .cta-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .primary-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .secondary-actions {
    display: flex;
    justify-content: center;
  }

  .cta-btn {
    min-width: 280px;
    justify-content: center;
    font-weight: 600;
    box-shadow: var(--shadow-xl);
    transition: all var(--transition-normal);
  }

  .cta-btn:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-2xl);
  }

  .btn-secondary {
    background: transparent;
    border: 2px solid white;
    color: white;
  }

  .btn-secondary:hover {
    background: white;
    color: var(--primary-600);
  }

  .trust-indicators {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
    padding: var(--space-6);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .trust-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .trust-title {
    font-weight: 600;
    font-size: 1rem;
    line-height: 1.2;
  }

  .trust-subtitle {
    font-size: 0.875rem;
    opacity: 0.8;
    line-height: 1.2;
  }

  .cta-footer {
    position: relative;
    z-index: 1;
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .location-info {
    display: flex;
    justify-content: center;
    gap: var(--space-8);
  }

  .location-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 0.95rem;
    opacity: 0.9;
  }

  .location-icon {
    font-size: 1.125rem;
  }

  @media (max-width: 1024px) {
    .cta-content {
      gap: var(--space-12);
    }
    
    .cta-text h2 {
      font-size: 2.25rem;
    }
    
    .cta-features {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .cta-content {
      grid-template-columns: 1fr;
      gap: var(--space-10);
      text-align: center;
    }
    
    .cta-text h2 {
      font-size: 2rem;
    }
    
    .cta-features {
      grid-template-columns: 1fr;
      gap: var(--space-3);
      max-width: 400px;
      margin: 0 auto;
    }
    
    .cta-btn {
      min-width: 250px;
      width: 100%;
      max-width: 300px;
    }
    
    .location-info {
      flex-direction: column;
      gap: var(--space-4);
      align-items: center;
    }
    
    .primary-actions {
      gap: var(--space-3);
    }
    
    .trust-indicators {
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .cta-text h2 {
      font-size: 1.75rem;
      line-height: 1.3;
    }
    
    .cta-text p {
      font-size: 1.125rem;
    }
    
    .cta-btn {
      min-width: 100%;
      font-size: 1rem;
      padding: var(--space-4) var(--space-5);
    }
    
    .trust-indicators {
      padding: var(--space-4);
      max-width: 100%;
    }
    
    .trust-item {
      flex-direction: column;
      text-align: center;
      gap: var(--space-2);
    }
    
    .cta-features {
      max-width: 100%;
    }
    
    .feature-item {
      font-size: 0.9rem;
    }
    
    .location-info {
      gap: var(--space-3);
    }
    
    .location-item {
      font-size: 0.9rem;
    }
  }

  /* Extra Small Devices */
  @media (max-width: 320px) {
    .cta-text h2 {
      font-size: 1.5rem;
    }
    
    .cta-text p {
      font-size: 1rem;
    }
    
    .cta-btn {
      font-size: 0.9rem;
      padding: var(--space-3) var(--space-4);
    }
    
    .trust-indicators {
      padding: var(--space-3);
    }
    
    .trust-title {
      font-size: 0.9rem;
    }
    
    .trust-subtitle {
      font-size: 0.8rem;
    }
  }

  /* Touch Device Optimizations */
  @media (hover: none) and (pointer: coarse) {
    .cta-btn {
      min-height: 48px;
    }
    
    .cta-btn:hover {
      transform: none;
    }
  }
</style>