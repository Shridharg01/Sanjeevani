<style>
  .testimonials {
    background: var(--neutral-50);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  .testimonial-card {
    background: white;
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-normal);
    position: relative;
    border: 2px solid transparent;
  }

  .testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl);
    border-color: var(--primary-200);
  }

  .testimonial-card.featured {
    border-color: var(--primary-300);
    background: linear-gradient(135deg, white 0%, var(--primary-50) 100%);
  }

  .testimonial-card.featured:hover {
    border-color: var(--primary-400);
  }

  .testimonial-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-6);
  }

  .rating {
    font-size: 1.125rem;
    color: #fbbf24;
  }

  .verified-badge {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    background: var(--accent-100);
    color: var(--accent-700);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-2xl);
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .verified-badge svg {
    width: 12px;
    height: 12px;
  }

  blockquote {
    color: var(--neutral-700);
    line-height: 1.7;
    margin-bottom: var(--space-6);
    font-size: 1rem;
    font-style: italic;
    position: relative;
  }

  blockquote::before {
    content: '"';
    font-size: 4rem;
    color: var(--primary-200);
    position: absolute;
    top: -20px;
    left: -10px;
    font-family: Georgia, serif;
    line-height: 1;
  }

  .patient-info {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .patient-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    border: 2px solid var(--primary-200);
  }

  .patient-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .patient-details {
    flex: 1;
  }

  .patient-name {
    font-weight: 600;
    color: var(--neutral-900);
    font-size: 1rem;
    margin-bottom: var(--space-1);
  }

  .patient-location {
    color: var(--neutral-600);
    font-size: 0.875rem;
    margin-bottom: var(--space-1);
  }

  .treatment-info {
    color: var(--primary-600);
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .testimonial-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-16);
  }

  .stat-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    text-align: center;
    box-shadow: var(--shadow-md);
    border: 1px solid var(--neutral-200);
    transition: all var(--transition-normal);
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary-600);
    font-family: var(--font-display);
    line-height: 1;
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-size: 1rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: var(--space-1);
  }

  .stat-sublabel {
    font-size: 0.875rem;
    color: var(--neutral-600);
  }

  .testimonial-actions {
    text-align: center;
    display: flex;
    gap: var(--space-4);
    justify-content: center;
  }

  @media (max-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-6);
    }
    
    .testimonial-stats {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
    
    .testimonial-card {
      padding: var(--space-6);
      margin: 0 auto;
      max-width: 500px;
    }
    
    .testimonial-header {
      flex-direction: column;
      gap: var(--space-3);
      align-items: flex-start;
    }
    
    .testimonial-stats {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
    
    .testimonial-actions {
      flex-direction: column;
      align-items: center;
      gap: var(--space-3);
    }
    
    .testimonial-actions .btn {
      width: 100%;
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .testimonial-card {
      padding: var(--space-5);
      max-width: 100%;
    }
    
    .patient-info {
      flex-direction: column;
      text-align: center;
      gap: var(--space-3);
    }
    
    .stat-card {
      padding: var(--space-5);
    }
    
    .stat-number {
      font-size: 2rem;
    }
    
    blockquote {
      font-size: 0.95rem;
      line-height: 1.6;
    }
    
    .patient-name {
      font-size: 0.95rem;
    }
    
    .patient-location {
      font-size: 0.8rem;
    }
    
    .treatment-info {
      font-size: 0.75rem;
    }
  }

  /* Extra Small Devices */
  @media (max-width: 320px) {
    .testimonial-card {
      padding: var(--space-4);
    }
    
    .stat-card {
      padding: var(--space-4);
    }
    
    .stat-number {
      font-size: 1.75rem;
    }
    
    .stat-label {
      font-size: 0.9rem;
    }
    
    blockquote {
      font-size: 0.9rem;
    }
  }

  /* Touch Device Optimizations */
  @media (hover: none) and (pointer: coarse) {
    .testimonial-card,
    .stat-card {
      transition: none;
    }
    
    .testimonial-card:hover,
    .stat-card:hover {
      transform: none;
    }
    
    .testimonial-actions .btn {
      min-height: 48px;
    }
  }
</style>