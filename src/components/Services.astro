<style>
  .services {
    background: var(--neutral-50);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  .service-card {
    background: white;
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-normal);
    position: relative;
    border: 2px solid transparent;
    height: fit-content;
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl);
    border-color: var(--primary-200);
  }

  .service-card.featured {
    border-color: var(--primary-300);
    background: linear-gradient(135deg, white 0%, var(--primary-50) 100%);
  }

  .service-card.featured:hover {
    border-color: var(--primary-400);
  }

  .service-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: var(--space-6);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--primary-500), var(--primary-600));
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: var(--shadow-lg);
  }

  .service-badge {
    background: linear-gradient(135deg, var(--accent-500), var(--accent-600));
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-2xl);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .service-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: var(--space-4);
    font-family: var(--font-display);
  }

  .service-card p {
    color: var(--neutral-600);
    line-height: 1.6;
    margin-bottom: var(--space-6);
  }

  .service-features {
    list-style: none;
    margin-bottom: var(--space-8);
  }

  .service-features li {
    color: var(--accent-700);
    margin-bottom: var(--space-2);
    font-weight: 500;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .service-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    padding-top: var(--space-6);
    border-top: 1px solid var(--neutral-200);
  }

  .service-price {
    display: flex;
    flex-direction: column;
  }

  .price-label {
    font-size: 0.75rem;
    color: var(--neutral-600);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--space-1);
  }

  .price-value {
    font-size: 1.5rem;
    font-weight: 900;
    color: var(--primary-600);
    font-family: var(--font-primary);
    line-height: 1.2;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.15);
  }

  .services-cta {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-700));
    border-radius: var(--radius-2xl);
    padding: var(--space-12);
    text-align: center;
    color: white;
    box-shadow: var(--shadow-xl);
  }

  .cta-content h3 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: var(--space-4);
    color: white;
    font-family: var(--font-display);
  }

  .cta-content p {
    font-size: 1.125rem;
    margin-bottom: var(--space-8);
    opacity: 0.9;
    color: white;
  }

  .cta-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
  }

  .cta-actions .btn {
    background: white;
    color: var(--primary-600);
    border: 2px solid white;
  }

  .cta-actions .btn:hover {
    background: var(--primary-50);
    transform: translateY(-2px);
  }

  .cta-actions .btn-whatsapp {
    background: #25D366;
    color: white;
    border-color: #25D366;
  }

  .cta-actions .btn-whatsapp:hover {
    background: #1ea952;
    border-color: #1ea952;
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
    
    .service-card {
      padding: var(--space-6);
      margin: 0 auto;
      max-width: 500px;
    }
    
    .service-footer {
      flex-direction: column;
      align-items: stretch;
      gap: var(--space-4);
    }
    
    .service-footer .btn {
      width: 100%;
      justify-content: center;
    }
    
    .services-cta {
      padding: var(--space-8);
      margin: 0 var(--space-4);
      border-radius: var(--radius-xl);
    }
    
    .cta-content h3 {
      font-size: 1.75rem;
    }
    
    .cta-actions {
      flex-direction: column;
      align-items: center;
      gap: var(--space-3);
    }
    
    .cta-actions .btn {
      width: 100%;
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .service-card {
      padding: var(--space-5);
      max-width: 100%;
    }
    
    .service-header {
      flex-direction: column;
      gap: var(--space-3);
      align-items: center;
      text-align: center;
    }
    
    .services-cta {
      padding: var(--space-6);
      margin: 0 var(--space-2);
    }
    
    .cta-content h3 {
      font-size: 1.5rem;
      line-height: 1.3;
    }
    
    .cta-content p {
      font-size: 1rem;
    }
    
    .service-features li {
      font-size: 0.9rem;
    }
    
    .price-value {
      font-size: 1.5rem;
    }
  }

  /* Extra Small Devices */
  @media (max-width: 320px) {
    .service-card {
      padding: var(--space-4);
    }
    
    .service-card h3 {
      font-size: 1.25rem;
    }
    
    .services-cta {
      padding: var(--space-5);
      margin: 0 var(--space-1);
    }
    
    .cta-content h3 {
      font-size: 1.25rem;
    }
  }

  /* Touch Device Optimizations */
  @media (hover: none) and (pointer: coarse) {
    .service-card {
      transition: none;
    }
    
    .service-card:hover {
      transform: none;
    }
    
    .service-footer .btn {
      min-height: 48px;
    }
    }
  }
</style>