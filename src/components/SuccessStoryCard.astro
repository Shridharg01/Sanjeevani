---
// Success Story Card Component - Reusable component for patient testimonials
export interface Props {
  story: {
    id: number;
    name: string;
    location: string;
    avatar: string;
    rating: number;
    treatment: string;
    timeline: string;
    testimonial: string;
  };
}

const { story } = Astro.props;

// Generate star rating
const stars = '‚≠ê'.repeat(story.rating);
---

<div class="story-card">
  <div class="story-header">
    <div class="patient-avatar">
      <img src={story.avatar} alt={story.name} loading="lazy" />
    </div>
    <div class="patient-info">
      <h4>{story.name}</h4>
      <p>{story.location}</p>
      <div class="rating">{stars}</div>
    </div>
  </div>
  <blockquote>
    "{story.testimonial}"
  </blockquote>
  <div class="story-details">
    <span class="treatment">{story.treatment}</span>
    <span class="timeline">{story.timeline}</span>
  </div>
</div>

<style>
  .story-card {
    background: white;
    padding: var(--space-8);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-normal);
    border: 1px solid var(--neutral-200);
  }

  .story-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-200);
  }

  .story-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .patient-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    border: 2px solid var(--primary-200);
  }

  .patient-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .patient-info h4 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--neutral-900);
    margin-bottom: var(--space-1);
    font-family: var(--font-display);
  }

  .patient-info p {
    font-size: 0.9rem;
    color: var(--neutral-600);
    margin-bottom: var(--space-1);
  }

  .rating {
    font-size: 0.9rem;
    color: #fbbf24;
  }

  blockquote {
    font-style: italic;
    color: var(--neutral-700);
    line-height: 1.7;
    margin-bottom: var(--space-6);
    font-size: 1rem;
    position: relative;
  }

  blockquote::before {
    content: '"';
    font-size: 4rem;
    color: var(--primary-200);
    position: absolute;
    top: -20px;
    left: -10px;
    font-family: Georgia, serif;
    line-height: 1;
  }

  .story-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-4);
    border-top: 1px solid var(--neutral-200);
  }

  .treatment {
    color: var(--primary-600);
    font-weight: 500;
    font-size: 0.9rem;
  }

  .timeline {
    color: var(--neutral-600);
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .story-header {
      flex-direction: column;
      text-align: center;
      gap: var(--space-3);
    }
    
    .story-details {
      flex-direction: column;
      gap: var(--space-2);
      text-align: center;
    }
    
    .story-card {
      padding: var(--space-6);
    }
  }
</style>